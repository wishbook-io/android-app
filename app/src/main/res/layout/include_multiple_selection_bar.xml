<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_multiselect_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="right|bottom"
    android:background="@color/white"
    android:elevation="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="gone"
    android:outlineProvider="bounds">

    <TextView
        android:id="@+id/txt_other_share_multiple"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="Others"
        android:background="@color/white"
        android:textAllCaps="false"
        android:textColor="@color/color_primary" />


    <View
        android:layout_width="0.5dp"
        android:background="@color/purchase_light_gray"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linear_whatsapp_share"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/whatsapp_color_code"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            app:srcCompat="@drawable/ic_whatsapp_white" />

        <com.wishbook.catalog.Utils.widget.CustomDrawableTextView
            android:id="@+id/txt_btn_whatsapp_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Share on Whatsapp"
            android:textColor="@color/white" />


    </LinearLayout>




    <TextView
        android:id="@+id/txt_add_to_cart_multiple"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:background="@color/orange"
        android:gravity="center"
        android:padding="8dp"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/white" />


</LinearLayout>