<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <View
        android:id="@+id/spacer"
        android:layout_width="8dp"
        android:layout_height="120dp">

    </View>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="90dp"
            android:layout_height="122dp"
            android:background="@color/whatsapp_color_code"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="1dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/category_img"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:placeholderImage="@drawable/uploadempty"
                    card_view:actualImageScaleType="fitXY" />


                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:text="Title"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_collection_catalog"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_edge_grey_rectengle"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="@dimen/font_size_normal"
            android:singleLine="true"
            android:text="@string/collections"
            android:textColor="@color/color_primary" />

        <TextView
            android:id="@+id/txt_collection_product"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_edge_grey_rectengle"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="@dimen/font_size_normal"
            android:text="@string/products"
            android:textColor="@color/color_primary" />


    </LinearLayout>


</LinearLayout>




