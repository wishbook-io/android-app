<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save &amp; Subscribe Filter"
            android:textColor="@color/purchase_dark_gray"
            android:textSize="@dimen/font_size_subheading" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:hint="Enter filter name">

            <EditText
                android:id="@+id/edit_filter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:maxLength="100"
                android:textColorHint="@color/purchase_light_gray"
                android:textSize="@dimen/font_size_normal"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/hint_disable"
            style="@style/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/save_subscribe_note"
            android:textSize="12sp" />


    </LinearLayout>
</LinearLayout>