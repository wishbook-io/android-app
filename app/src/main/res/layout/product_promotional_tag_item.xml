<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <com.wishbook.catalog.Utils.widget.WrapContentDraweeView
        android:id="@+id/promotional_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:placeholderImage="@drawable/uploadempty"
        card_view:actualImageScaleType="fitXY" />



    <TextView
        android:id="@+id/txt_collection_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/collections"
        android:padding="8dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_edge_grey_rectengle"
        android:textColor="@color/color_primary" />

    <TextView
        android:id="@+id/txt_collection_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/products"
        android:padding="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/btn_edge_grey_rectengle"
        android:textColor="@color/color_primary" />


</LinearLayout>