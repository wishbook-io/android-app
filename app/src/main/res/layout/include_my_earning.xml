<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:padding="16dp">

    <com.wishbook.catalog.Utils.widget.CustomDrawableTextView
        android:id="@+id/txt_reseller_hub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="22dp"
        android:text="My earnings"
        android:textColor="@color/color_primary"
        android:textSize="18sp"
        app:drawableRightCompat="@drawable/ic_new" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/settings_wb_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/ic_wb_money_version2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WB Money" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/settings_reward_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:tint="@color/color_primary"
                app:srcCompat="@drawable/ic_reward_point_24dp" />

            <TextView
                android:id="@+id/txt_reward_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/reward_points" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>