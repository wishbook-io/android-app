<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_close_black_24dp" />


        <TextView
            android:id="@+id/txt_catalog_sub_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/font_size_default"
            android:text="@string/enquiry_question" />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
            android:text="Price &amp; Discounts"
            android:theme="@style/AppTheme"
            />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_fabric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:theme="@style/AppTheme"
            android:paddingTop="6dp"
            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
            android:text="Fabric &amp; Materials" />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/check_dispatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:theme="@style/AppTheme"
            android:paddingTop="6dp"
            style="@style/Base.Widget.AppCompat.CompoundButton.CheckBox"
            android:text="Dispatch &amp; Delivery"
            />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_enquiry"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@color/color_primary"
        android:text="send"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_normal"
        android:textStyle="bold" />
</LinearLayout>

