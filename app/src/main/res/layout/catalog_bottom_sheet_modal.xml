<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_catalog_sub_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/modal_bottom_subtext" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_close_black_24dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/btn_become_seller"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_edge_less"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Become a seller of this catalog"
        android:textColor="@color/color_primary"
        android:visibility="visible" />

    <TextView
        android:id="@+id/btn_enable_disable"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_edge_less"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Start Selling"
        android:textColor="@color/color_primary"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_see_detail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_edge_less"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="See Details"
        android:textColor="@color/color_primary"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txt_catalog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catalog Name"
            android:textColor="@color/purchase_dark_gray"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt_price_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Price"
            android:textColor="@color/purchase_dark_gray"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/brand_img_container"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="bottom">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/catalog_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:scaleType="centerInside"
                app:actualImageScaleType="fitCenter"
                app:placeholderImage="@drawable/uploadempty" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Category:"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/number_designs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Designs:"
                android:layout_marginTop="8dp"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="Size :"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_stiching_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="Stitching Details :"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_single_piece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="Single Piece Available"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/txt_kurti_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="4 Pcs/Design :"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_normal" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>