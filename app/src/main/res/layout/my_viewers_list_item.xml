<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/catalog_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/noprev"
            app:actualImageScaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:paddingTop="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_catalog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@string/font_medium"
                    android:text="Catalog name"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@string/font_medium"
                    android:text="by"
                    android:visibility="gone"
                    android:textColor="@color/purchase_medium_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_medium"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_viewed_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_medium"
                    android:text="Viewed by"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="@dimen/font_size_medium" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|right"
                android:layout_gravity="bottom|right"
                android:fontFamily="@string/font_medium"
                android:text="VIEW"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>