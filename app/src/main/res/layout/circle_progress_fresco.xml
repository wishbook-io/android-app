<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/circle_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cpv_barColor="@color/white"
        app:cpv_barWidth="3dp"
        app:cpv_fillColor="@color/transparent"
        app:cpv_rimColor="@color/white_alpha_40"
        app:cpv_rimWidth="5dp"
        app:cpv_spin="true"
        app:cpv_spinColor="@color/white_alpha_40"
        app:cpv_textColor="@color/transparent" />

</LinearLayout>