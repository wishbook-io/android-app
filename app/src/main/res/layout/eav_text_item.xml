<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_eav_text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="Text Title"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_eav_text_value"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_edge_grey_rectengle"
            android:hint=""
            android:padding="8dp"
            android:singleLine="true"
            android:textColorHint="@color/purchase_light_gray"
            android:textSize="14sp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/txt_eav_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Meter"
            android:textColor="@color/purchase_medium_gray" />


    </LinearLayout>


</LinearLayout>