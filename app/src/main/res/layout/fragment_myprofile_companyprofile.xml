<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar_app" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="26dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    style="@style/common_input_edittext_person_name"
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/input_firstname"
                    app:drawableLeftEditTextCompat="@drawable/ic_person_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First name"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    style="@style/common_input_edittext_person_name"
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/input_lastname"
                    app:drawableLeftEditTextCompat="@drawable/ic_person_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last name"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Email Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    style="@style/common_input_edittext_person_name"
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/input_username"
                    app:drawableLeftEditTextCompat="@drawable/ic_person_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your username"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    style="@style/common_input_edittext_company_name"
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/company_profile_name"
                    app:drawableLeftEditTextCompat="@drawable/ic_person_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company name"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_state"
                        style="@style/Spinner_Label"
                        />
                    <Spinner
                        android:id="@+id/company_profile_spinner_state"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_city"
                        style="@style/Spinner_Label"
                        />
                    <Spinner
                        android:id="@+id/company_profile_spinner_city"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email id"
                    app:drawableLeftEditTextCompat="@drawable/ic_mail_24dp"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Label -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content" android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/ic_stay_current_portrait_24dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="India"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_subheading"
                        android:layout_height="wrap_content"
                        android:id="@+id/countrycodes" />

                    <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                        app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                        android:id="@+id/input_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:digits="@string/digits"
                        android:singleLine="true"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="normal" />
                </LinearLayout>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/share_recieved_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Spinner_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pushdownstream" />

                <RadioGroup
                    android:id="@+id/company_profile_pushdownstream_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RadioButton
                        android:id="@+id/radio_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="No" />

                    <RadioButton
                        android:id="@+id/radio_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes" />
                </RadioGroup>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/input_company"
                    android:editable="false"
                    android:enabled="false"
                    app:drawableLeftEditTextCompat="@drawable/ic_domain_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your company"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/input_company_type"
                    app:drawableLeftEditTextCompat="@drawable/ic_domain_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type of business"
                    android:editable="false"
                    android:enabled="false"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/deputed_containter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <com.wishbook.catalog.Utils.widget.CustomDrawableEditText
                    app:drawableRightEditTextCompat="@drawable/ic_star_rate_24dp"
                    android:id="@+id/input_deputed_to"
                    app:drawableLeftEditTextCompat="@drawable/ic_domain_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deputed To Company"

                    android:editable="false"
                    android:enabled="false"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:text="Save Changes"
                android:textColor="#ffffff" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>
