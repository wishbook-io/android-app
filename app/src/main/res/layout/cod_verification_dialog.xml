<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_button_container"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/color_primary"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/cod_thanks_msg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_default" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/txt_order_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_details"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_size_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="@string/order_numbers"
                            android:textSize="@dimen/font_size_normal" />

                        <TextView
                            android:id="@+id/txt_order_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text=""
                            android:textSize="@dimen/font_size_normal" />
                    </RelativeLayout>






                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="@string/order_date"
                            android:textSize="@dimen/font_size_normal" />

                        <TextView
                            android:id="@+id/txt_order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text=""
                            android:textSize="@dimen/font_size_normal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="@string/order_status"
                            android:textSize="@dimen/font_size_normal" />

                        <TextView
                            android:id="@+id/txt_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_size_normal" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relative_payment_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="Payment Detail"
                            android:textSize="@dimen/font_size_normal" />

                        <TextView
                            android:id="@+id/txt_payment_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/green"
                            android:textSize="@dimen/font_size_normal" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relative_margin_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left"
                            android:text="Margin Amount"
                            android:textSize="@dimen/font_size_normal" />

                        <TextView
                            android:id="@+id/txt_margin_amt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/green"
                            android:textSize="@dimen/font_size_normal" />
                    </RelativeLayout>







                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_shipping_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipment_details"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_size_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/txt_shipping_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:text="@string/shipping_address"
                            android:textSize="@dimen/font_size_normal" />

                        <TextView
                            android:id="@+id/txt_shipping_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/txt_shipping_label"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:text=""
                            android:textSize="@dimen/font_size_normal" />
                    </RelativeLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_track_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Shippment"
                    android:textColor="@color/white"
                    android:visibility="gone" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_amount_collected"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_size_default" />

                <TextView
                    android:id="@+id/txt_pending_amt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_edge_light_grey"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Rs. XXX"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_size_subheading" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/linear_button_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/toolbar_elevation"
        android:gravity="bottom"
        android:orientation="vertical"
        android:outlineProvider="bounds"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">




            <TextView
                android:id="@+id/btn_cancel_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/purchase_light_gray"
                android:gravity="center"
                android:text="@string/cancel_cod_order"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:visibility="visible" />


            <TextView
                android:id="@+id/btn_reconfirm_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/color_primary"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/reconfirm_cod_order"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:visibility="visible" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_gravity="center">


        <ProgressBar
            android:id="@+id/location_animation"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_animation"
            android:gravity="center"
            android:text="Loading.."
            android:textColor="@color/color_primary"
            android:textSize="@dimen/font_size_default" />
    </RelativeLayout>


</RelativeLayout>
