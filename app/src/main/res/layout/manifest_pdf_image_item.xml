<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/relative_img_container"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp">

        <com.facebook.drawee.view.SimpleDraweeView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/img_set"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:background="@drawable/img_bg_corner_round"
            android:scaleType="fitCenter"
            app:actualImageScaleType="fitCenter"></com.facebook.drawee.view.SimpleDraweeView>


        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black_alpha_40"
            android:gravity="center_horizontal"
            android:text="VIEW"
            android:textColor="@color/white" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/img_remove_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/ic_delete_meduim_24px" />

</RelativeLayout>

