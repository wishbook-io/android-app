                android:padding="8dp"
                android:text="All Review"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_default"
                android:visibility="gone"
                app:drawableRightCompat="@drawable/ic_forward_black_24dp" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
