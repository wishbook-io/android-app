<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_card_catalog_summary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_bg"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_catalog_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_catalog_detail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="left"
                    android:text="Catalog details"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="@dimen/font_size_default"
                    android:textStyle="normal" />

                <com.wishbook.catalog.Utils.widget.CustomDrawableTextView
                    android:id="@+id/txt_copy_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="Copy Details"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="normal"
                    app:drawableLeftCompat="@drawable/ic_copy_content" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/linear_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="Collection :"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium" />

                    <TextView
                        android:id="@+id/txt_collection_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        android:gravity="left"
                        android:text="-"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_collection"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium" />

                    <TextView
                        android:id="@+id/txt_collection_name_subtext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_collection"
                        android:layout_weight="4"
                        android:gravity="left"
                        android:text="@string/single_collection_sub_text"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="normal" />
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_catalog_detail_label_design"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="Designs :"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium" />

                    <TextView
                        android:id="@+id/txt_catalog_detail_number_design"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        android:gravity="left"
                        android:text="-"
                        android:textColor="@color/purchase_dark_gray"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="normal" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_product_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_product_id_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="Product ID :"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium" />

                    <TextView
                        android:id="@+id/txt_product_id_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        android:gravity="left"
                        android:text="-"
                        android:textColor="@color/purchase_dark_gray"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="normal" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="Price :"
                        android:visibility="gone"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_single_pc_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="-"
                                android:textColor="@color/purchase_dark_gray"
                                android:textSize="@dimen/font_size_medium"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txt_single_mwp_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="-"
                                android:textColor="@color/purchase_light_gray"
                                android:textSize="@dimen/font_size_medium"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/txt_single_clearance_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="% off"
                                android:textColor="@color/green"
                                android:textSize="@dimen/font_size_medium"
                                android:visibility="gone" />
                        </LinearLayout>



                        <TextView
                            android:id="@+id/txt_product_view_tax_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:text="View Tax &amp; Shipping Charges"
                            android:textColor="@color/color_primary"
                            android:textSize="@dimen/font_size_medium"
                            android:visibility="gone" />


                    </LinearLayout>

                </LinearLayout>




            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relative_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="Category :"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium" />

                    <TextView
                        android:id="@+id/txt_catalog_detail_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        android:gravity="left"
                        android:text="-"
                        android:textColor="@color/purchase_dark_gray"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="normal" />
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/linear_size_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="@string/size"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/txt_size_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:text="-"
                            android:textColor="@color/purchase_dark_gray"
                            android:textSize="@dimen/font_size_medium"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txt_size_chart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:text="View Size chart"
                            android:textColor="@color/color_primary"
                            android:textSize="@dimen/font_size_medium"
                            android:textStyle="normal" />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linear_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1.2"
                    android:gravity="left"
                    android:text="@string/color_colon"
                    android:textColor="@color/purchase_medium_gray"
                    android:textSize="@dimen/font_size_medium" />


                <TextView
                    android:id="@+id/txt_color_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:gravity="left"
                    android:text="-"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_eav_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <TextView
                android:id="@+id/txt_material_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="4"
                android:gravity="left"
                android:text="Not mentioned"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Not mentioned"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/relative_other_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1.2"
                        android:gravity="left"
                        android:text="@string/other_colon"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium"
                        android:visibility="gone" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_dispatch_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1.2"
                    android:text="Dispatch:"
                    android:textSize="@dimen/font_size_medium" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_dispatch_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="ghhgjhkjkkl"
                        android:textColor="@color/purchase_dark_gray"
                        android:textSize="@dimen/font_size_medium" />


                    <TextView
                        android:id="@+id/txt_pre_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_pre_order_left"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="3dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="3dp"
                        android:text="@string/pre_order"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_collection_other_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_view_collection_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/view_other_collection_subtext"
                    android:textAllCaps="false"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="14sp" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flex_collection_other_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="8dp"
                    app:alignContent="space_around"
                    app:alignItems="flex_start"
                    app:flexWrap="wrap"
                    app:showDivider="middle">

                    <TextView
                        android:id="@+id/txt_extra_images"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="-"
                        android:textAllCaps="false"
                        android:textColor="@color/color_primary"
                        android:textSize="16sp" />


                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/single_supplier_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1.2"
                                android:gravity="left"
                                android:text="@string/soldby_colon"
                                android:textColor="@color/purchase_medium_gray"
                                android:textSize="@dimen/font_size_medium" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/single_seller_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_sold_by"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="right"
                                        android:text=""
                                        android:textColor="@color/color_primary"
                                        android:textSize="@dimen/font_size_medium"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:id="@+id/linear_seller_rating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:orientation="horizontal">

                                        <com.wishbook.catalog.Utils.widget.CustomDrawableTextView
                                            android:id="@+id/txt_rating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/rating_summary"
                                            android:drawablePadding="5dp"
                                            android:drawableTint="@color/white"
                                            android:gravity="right"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:text="4.5"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/font_size_medium"
                                            android:textStyle="normal"
                                            app:drawableRightCompat="@drawable/ic_star_rating_18dp" />
                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/img_trusted"
                                        android:layout_width="50dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="8dp"
                                        android:src="@drawable/ic_trusted_seller_small"
                                        android:visibility="gone" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_single_seller_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal">


                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2" />

                            <TextView
                                android:id="@+id/txt_location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="4"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/purchase_medium_gray"
                                android:textSize="@dimen/font_size_medium"
                                android:textStyle="normal" />
                        </LinearLayout>


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/multiple_seller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.2"
                            android:gravity="left"
                            android:text="@string/soldby_colon"
                            android:textColor="@color/purchase_medium_gray"
                            android:textSize="@dimen/font_size_medium" />

                        <LinearLayout
                            android:id="@+id/linear_txt_see_all_seller"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_weight="4">

                            <TextView
                                android:id="@+id/txt_see_all_seller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/color_primary"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rating_root_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:gravity="left"
                android:text="Ratings"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="@dimen/font_size_default"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.wishbook.catalog.Utils.widget.CustomDrawableTextView
                    android:id="@+id/txt_avg_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="4dp"
                    android:drawablePadding="10dp"
                    android:gravity="left"
                    android:text="4.5"
                    android:textColor="@color/purchase_dark_gray"
                    android:textSize="@dimen/font_size_dashboard_numbers"
                    android:textStyle="normal"
                    app:drawableRightCompat="@drawable/ic_star_black_24dp" />

                <TextView
                    android:id="@+id/txt_total_rating_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="40 ratings &amp; 20 reviews"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/font_size_normal" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_rating_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_no_of_review_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/view_other_collection_subtext"
