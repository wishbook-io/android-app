<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:gravity="center"
    android:id="@+id/linear_main_pending"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_request_pending" />


    <TextView
        android:id="@+id/txt_pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/pending_permission_text"
        android:textColor="@color/purchase_dark_gray"
        android:textSize="@dimen/font_size_default" />


    <RelativeLayout
        android:id="@+id/relative_dialog_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="16dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@id/txt_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="OK"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@color/color_primary" />

            <TextView
                android:id="@+id/txt_reset_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:text="Reset Company"
                android:textAllCaps="true"
                android:textSize="@dimen/font_size_normal"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/color_primary" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>