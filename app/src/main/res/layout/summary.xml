<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:outlineProvider="bounds">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/color_primary"
            android:minHeight="56dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:transitionName="actionBar"
            android:visibility="visible"
            app:contentInsetLeft="15dp"
            app:contentInsetStart="15dp"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/MyActionBarTheme"
            tools:ignore="UnusedAttribute" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical">

            <com.wishbook.catalog.Utils.widget.CustomDrawableTextView
                android:id="@+id/txt_home_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_search"
                android:drawablePadding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Search for Brands, Fabric, Work and more"
                android:textColor="@color/purchase_medium_gray"
                android:transitionName="search_activity_transition"
                app:drawableLeftCompat="@drawable/summary_search"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:background="@color/contacts_home_grey"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.wishbook.catalog.Utils.widget.LoopViewPager
                    android:id="@id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="gone" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="48dp"
                    app:ci_drawable="@drawable/circle_blue_radius"
                    app:ci_drawable_unselected="@drawable/circle_white_radius" />


            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/contacts_home_grey"
                android:elevation="6dp"
                android:outlineProvider="bounds">


                <LinearLayout
                    android:id="@+id/linear_catalog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_fb_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        android:background="@color/whatsapp_color_code"
                        android:text="Facebook Page Manage test"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="16dp"
                        android:background="@color/contacts_home_grey"
                        android:layout_marginBottom="16dp"
                        android:visibility="visible" />


                    <com.wishbook.catalog.Utils.widget.WrapContentDraweeView
                        android:id="@+id/reseller_banner_img"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="8dp"
                        app:actualImageScaleType="fitXY"
                        app:placeholderImage="@drawable/uploadempty" />



                    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_apply_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:visibility="gone"
                        card_view:cardCornerRadius="3dp"
                        card_view:cardElevation="1dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPadding="0dp">

                        <LinearLayout
                            android:id="@+id/linear_apply_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:visibility="visible">


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="left"
                                android:text="@string/credit_rating_home_tile"
                                android:textColor="@color/purchase_dark_gray"
                                android:textSize="16sp" />


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/txt_apply_credit"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_purchase_orange"
                                android:clickable="false"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="Apply Now"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/linear_stories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_stories_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:clickable="false"
                            android:fontFamily="sans-serif-medium"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="3dp"
                            android:text="Wishbook Stories"
                            android:textColor="@color/purchase_dark_gray"
                            android:textSize="@dimen/font_size_normal"
                            android:textStyle="normal" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_stories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="8dp"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/clear_stroy_pref"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clear Story Pref"
                            android:visibility="gone" />


                    </LinearLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_deep_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginBottom="16dp"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_single_catalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="0dp"
                        android:visibility="visible" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_single_noncatalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="0dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/linear_user_recommded_reseller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:gravity="left">

                            <TextView
                                android:id="@+id/txt_recommded_title_reseller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:clickable="false"
                                android:padding="8dp"
                                android:text="Header"
                                android:textColor="@color/purchase_dark_gray"
                                android:textSize="@dimen/font_size_subheading"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="10dp"
                                android:clickable="false"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="See all"
                                android:textColor="@color/color_primary"
                                android:textSize="@dimen/font_size_normal"
                                android:textStyle="normal"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_recommded_reseller"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp" />

                        </RelativeLayout>


                    </LinearLayout>

                    <!-- 1. All Catalog -->

                    <view
                        android:id="@+id/recycler_view1"
                        class="com.wishbook.catalog.Utils.RecyclerViewEmptySupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <!-- 2. Pre-Book Catalog -->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_prebook_catalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="0dp"
                        android:visibility="visible" />



                    <!-- 3. Single Pc. Catalog -->


                    <LinearLayout
                        android:id="@+id/linear_user_recommded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="0dp"
                            android:gravity="left">

                            <TextView
                                android:id="@+id/txt_recommded_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:clickable="false"
                                android:padding="8dp"
                                android:text="Header"
                                android:textColor="@color/purchase_dark_gray"
                                android:textSize="@dimen/font_size_subheading"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="10dp"
                                android:clickable="false"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="See all"
                                android:textColor="@color/color_primary"
                                android:textSize="@dimen/font_size_normal"
                                android:textStyle="normal"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_recommded"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/sectionMore"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:background="@drawable/btn_see_all"
                                android:clickable="false"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="See all"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_size_normal"
                                android:textStyle="normal"
                                android:visibility="gone" />
                        </RelativeLayout>


                    </LinearLayout>

                    <!-- 4. Non-Catalog carousel with Banner-->


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_non_catalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="0dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/linear_how_to_resell_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/top_10_gradient"
                            android:textColor="@color/white"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:text="#How to Resell on Wishbook"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_how_to_resell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:visibility="visible" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_single_catalog1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="0dp"
                        android:visibility="visible" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_single_noncatalog1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="0dp"
                        android:visibility="visible" />


                    <!-- 6. User WishList-->
                    <LinearLayout
                        android:id="@+id/linear_wishlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:clickable="false"
                                android:padding="8dp"
                                android:text="From Your Wishlist"
                                android:textColor="@color/purchase_dark_gray"
                                android:textSize="@dimen/font_size_subheading"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/wishlist_see_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="4dp"
                                android:clickable="false"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="See all"
                                android:textColor="@color/purchase_dark_gray"
                                android:textSize="@dimen/font_size_normal"
                                android:textStyle="normal" />
                        </RelativeLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_wishlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginBottom="8dp"

                            android:visibility="visible" />

                    </LinearLayout>

                    <!-- 7. Lehengas Banner-->

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/forth_banner_img"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="16dp"
                        app:actualImageScaleType="fitXY"
                        app:placeholderImage="@drawable/uploadempty" />

                    <!-- 8. All Public Brands-->
                    <include layout="@layout/include_brand_recycler" />

                    <!-- 9. Brands Follow-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_followedbyme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="16dp"
                        android:visibility="visible" />

                    <!-- 10. Suit Banner-->
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/third_banner_img"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:actualImageScaleType="fitXY"
                        app:placeholderImage="@drawable/uploadempty" />

                    <!-- 11. Received Catalog-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_received_catalog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="16dp"
                        android:visibility="invisible" />


                    <!-- 12. Printed Saree Banner -->
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/second_banner_img"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:actualImageScaleType="fitXY"
                        app:placeholderImage="@drawable/uploadempty" />


                    <!-- 13. Most Sold and Most View -->
                    <LinearLayout
                        android:id="@+id/linear_most_sold_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@color/red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Top 10"
                                android:textColor="@color/red"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@color/red" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_most_sold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_marginTop="8dp"
                            android:visibility="visible" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/video_feedback_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/video_feedback_header"
                            android:textColor="@color/white"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="8dp"
                            android:text="#HappyBuyers"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_video_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:visibility="visible" />
                    </LinearLayout>

                    <!-- 14. FeedBack Banner -->
                    <RelativeLayout
                        android:id="@+id/feedback_container"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPager_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>




                    <TextView
                        android:id="@+id/list_empty1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:visibility="gone" />


                    <view
                        android:id="@+id/recycler_view"
                        class="com.wishbook.catalog.Utils.RecyclerViewEmptySupport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|bottom"
                        android:layout_marginTop="-8dp" />


                    <LinearLayout
                        android:id="@+id/linear_broker_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:visibility="gone">

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/relative_txt_tile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:clickable="false"
                                android:padding="8dp"
                                android:text="@string/broker_dashboard"
                                android:textColor="@color/purchase_dark_gray"
                                android:textSize="@dimen/font_size_subheading"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_brokerreport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.wishbook.catalog.Utils.widget.WrapContentDraweeView
                        android:id="@+id/reseller_banner_img1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="8dp"
                        app:actualImageScaleType="fitXY"
                        android:visibility="gone"
                        app:placeholderImage="@drawable/uploadempty" />

                    <com.wishbook.catalog.Utils.widget.WrapContentDraweeView
                        android:id="@+id/refer_earn_promotion_img"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="8dp"
                        app:actualImageScaleType="fitXY"
                        android:visibility="gone"
                        app:placeholderImage="@drawable/uploadempty" />

                    <LinearLayout
                        android:id="@+id/recent_catalog_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="8dp"
                        android:background="#fff"
                        android:clickable="false"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recently Viewed Products"
                            android:textColor="@color/purchase_dark_gray"
                            android:textSize="@dimen/font_size_subheading"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <!-- 16. Recent Viewed -->

                    <View
                        android:id="@+id/space"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="#fff" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_recent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/see_all_recent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txt_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:duplicateParentState="true"
                            android:fontFamily="@string/font_medium"
                            android:text="SEE ALL"
                            android:textColor="@color/color_primary"
                            android:textSize="@dimen/font_size_default" />

                        <ImageView
                            android:id="@+id/btn_catalog_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:duplicateParentState="true"
                            android:tint="@color/color_primary"
                            app:srcCompat="@drawable/ic_down_arrow_black_24dp" />
                    </LinearLayout>
                </LinearLayout>


            </FrameLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


