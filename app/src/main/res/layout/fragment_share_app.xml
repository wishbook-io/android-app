<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/intro_bg">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/toolbar_app" />

            <!--  <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/intro_text_color" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/applogo" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="@string/share_app_sub_txt"
                    android:textColor="@color/intro_text_color"
                    android:textSize="@dimen/font_size_default" />


                <com.wishbook.catalog.Utils.widget.CustomDrawableAppCompactButton
                    android:id="@+id/btn_share_whatsapp"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_edge_green"
                    app:drawableLeftButtonCompat="@drawable/ic_share_whatsapp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingLeft="30dp"
                    android:stateListAnimator="@null"
                    android:text="Whatsapp"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold" />




                <com.wishbook.catalog.Utils.widget.CustomDrawableAppCompactButton
                    android:id="@+id/btn_share_sms"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_edge_less_padding_blue"
                    app:drawableLeftButtonCompat="@drawable/ic_shareapp_sms"
                    android:gravity="center"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="SMS"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.wishbook.catalog.Utils.widget.CustomDrawableAppCompactButton
                    android:id="@+id/btn_share_other"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_edge_less_padding_blue"
                    app:drawableLeftButtonCompat="@drawable/ic_shareapp_other"
                    android:gravity="center"
                    android:padding="5dp"
                    android:stateListAnimator="@null"
                    android:text="Other"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>