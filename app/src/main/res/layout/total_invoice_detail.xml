<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_invoice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Order date"
            android:textColor="@color/purchase_medium_gray" />

        <TextView
            android:id="@+id/cart_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="right"
            android:text=""
            android:textColor="@color/purchase_medium_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_medium"
            android:gravity="left"
            android:text="Order Value"
            android:textColor="@color/purchase_dark_gray" />

        <TextView
            android:id="@+id/total_order_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.95"
            android:fontFamily="@string/font_medium"
            android:gravity="right"
            android:text="Rs.  "
            android:textColor="@color/purchase_dark_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Total discount"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/discount_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.95"
            android:gravity="right"
            android:text="- Rs.  "
            android:textColor="@color/green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Total GST"
            android:textColor="@color/purchase_dark_gray" />

        <TextView
            android:id="@+id/gst_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.95"
            android:gravity="right"
            android:text="+ Rs.  "
            android:textColor="@color/purchase_dark_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Delivery charges"
            android:textColor="@color/purchase_dark_gray" />

        <TextView
            android:id="@+id/delivery_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.95"
            android:gravity="right"
            android:text="+ Rs.  "
            android:textColor="@color/purchase_dark_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_medium"
            android:gravity="left"
            android:text="Sub-Total"
            android:textColor="@color/purchase_dark_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_medium"
            android:gravity="right"
            android:text="+ Rs.  "
            android:textColor="@color/purchase_dark_gray"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_invoice_wb_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="WB Money"
            android:textColor="@color/color_primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/invoice_wb_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="+ Rs.  "
            android:textColor="@color/color_primary"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_invoice_reward_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/reward_points"
            android:textColor="@color/color_primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/invoice_reward_point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="+ Rs.  "
            android:textColor="@color/color_primary"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:background="@color/material_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_coupon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_cart_coupon" />


        <com.wishbook.catalog.Utils.widget.CustomDrawableTextView
            android:id="@+id/txt_select_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/select_amp_apply_coupon_code"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/font_size_default"
            android:visibility="gone"
            app:drawableRightCompat="@drawable/ic_keyboard_arrow_right_blue" />


        <LinearLayout
            android:id="@+id/linear_coupon_stage2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_coupon_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_medium"
                    android:text="WBK50"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_default" />

                <TextView
                    android:id="@+id/txt_coupon_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applied_successfully"
                    android:textColor="@color/purchase_medium_gray"
                    android:textSize="@dimen/font_size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_wb_coupon_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Rs."
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/txt_coupon_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="4dp"
                    android:text="Remove"
                    android:textColor="@color/red"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:background="@color/material_bg" />


    <LinearLayout
        android:id="@+id/linear_now_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_medium"
            android:gravity="left"
            android:text="Total Amount"
            android:textColor="@color/purchase_dark_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/payable_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_medium"
            android:gravity="right"
            android:text="+ Rs.  "
            android:textColor="@color/purchase_dark_gray"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_invoice_resale_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_invoice_resell_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_medium"
                android:gravity="left"
                android:text="Resale Amount"
                android:textColor="@color/purchase_dark_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_invoice_resell_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_medium"
                android:gravity="right"
                android:text="+ Rs.  "
                android:textColor="@color/purchase_dark_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_resale_total_profit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_medium"
                android:gravity="left"
                android:text="Your Total Profit"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_resale_total_profit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/font_medium"
                android:gravity="right"
                android:text="+ Rs.  "
                android:textColor="@color/green"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_not_set_resale_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_medium"
            android:gravity="left"
            android:layout_marginTop="@dimen/margin_10dp"
            android:visibility="gone"
            android:text="@string/not_set_resale_amt_error"
            android:textColor="@color/red"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/txt_add_verify_bank_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_medium"
            android:gravity="left"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/add_verify_bank_resale_hint"
            android:textColor="@color/purchase_light_gray"
            android:textSize="12sp" />

    </LinearLayout>





</LinearLayout>