<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="100dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_person_24dp"
                        app:actualImageScaleType="fitCenter"
                        app:placeholderImage="@drawable/uploadempty"
                        android:id="@+id/profpic" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/font_size_heading"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/det_name" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tint="@color/purchase_dark_gray"
                        app:srcCompat="@drawable/ic_call_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/purchase_dark_gray"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/det_num" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="30dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleType="fitCenter"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tint="@color/purchase_dark_gray"
                        app:srcCompat="@drawable/ic_mail_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/purchase_dark_gray"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/det_email" />
                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_create_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Create order"
                android:textColor="#ffffff"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_visits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Check in"
                android:textColor="#ffffff"
                android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/editcont"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="30dp">
                    <LinearLayout
                        android:layout_width="30dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="right|center"
                        android:visibility="gone"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitEnd"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_create_24dp"
                            android:id="@+id/img_edit" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Buyer type"
                            android:textSize="@dimen/font_size_normal"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:orientation="vertical"

                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_grouptypes" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/select_broker_container"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Broker name"
                            android:textSize="@dimen/font_size_normal"
                            android:id="@+id/broker_text"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:orientation="vertical"

                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinner_brokers" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Payment duration"
                            android:textSize="@dimen/font_size_normal"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <EditText
                            android:layout_weight="1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:selectAllOnFocus="true"
                            android:id="@+id/edit_paymentdur"
                            android:inputType="numberDecimal"/>
                        <TextView
                            android:layout_weight="0.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="days"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Credit limit"
                            android:textSize="@dimen/font_size_normal"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_credit"
                            android:selectAllOnFocus="true"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_brokerage"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="@string/set_brokerage"
                            android:textSize="@dimen/font_size_normal"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_brokerage"
                            android:selectAllOnFocus="true"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Discount :"
                            android:textSize="@dimen/font_size_subheading"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="Credit %"
                            android:textSize="@dimen/font_size_normal"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/font_size_subheading"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Cash %"
                            android:textSize="@dimen/font_size_normal"
                            android:textColor="@color/purchase_dark_gray"
                            android:layout_marginLeft="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_discount"
                            android:selectAllOnFocus="true"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_cash"
                            android:selectAllOnFocus="true"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_horizontal"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="150dp"
                        android:orientation="vertical"
                        android:gravity="left|center"
                        android:layout_height="match_parent">
                        <Button
                            android:text="Save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/but_save" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_height="match_parent">
                        <Button
                            android:text="Cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/but_cancel" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_broker_user_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexbox_suppliers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        app:alignContent="space_around"
                        app:alignItems="flex_start"
                        app:flexWrap="wrap"
                        app:showDivider="middle">

                        <TextView
                            android:id="@+id/txt_supplier_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="left|center"
                            android:text="Supplier :"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="10dp" />

                    </com.google.android.flexbox.FlexboxLayout>

                    <TextView
                        android:id="@+id/btn_connect_supplier_broker"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_edge_less_padding_blue"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/connect_supplier_with_broker"
                        android:textAllCaps="false"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_height="40dp">

                <Button
                    android:text="Approve Buyer"
                    android:background="@drawable/btn_approve_green"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_approve"
                    android:layout_gravity="center_horizontal" />
                <!--<LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">-->
                    <Button
                        android:text="Reject Buyer"
                        android:background="@drawable/btn_red_edge"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/red"
                        android:elevation="0dp"
                        android:textAllCaps="false"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_reject" />
                <!--</LinearLayout>-->

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/tabscont"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:elevation="6dp"
            app:tabIndicatorColor="@color/color_primary"
            app:tabSelectedTextColor="@color/color_primary"
            app:tabTextColor="#616161"
            android:fillViewport="false" />





        <com.wishbook.catalog.Utils.CustomViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="400dp"

            />
    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>