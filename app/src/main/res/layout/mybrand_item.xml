<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/brand_item_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/brand_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/noprev"
                    app:actualImageScaleType="fitCenter"
                    app:placeholderImage="@drawable/uploadempty" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">



                    <TextView
                        android:id="@+id/brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Brand Name"
                        android:textSize="@dimen/font_size_default"
                        android:visibility="visible"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/catalogs_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0 catalogs"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:visibility="visible"
                        android:textColor="@color/purchase_medium_gray"
                        android:textSize="@dimen/font_size_medium" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_brand_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:stateListAnimator="@null"
                    android:background="@drawable/button_edge_less"
                    android:text="@string/btn_follow"
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_primary" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout><!--
